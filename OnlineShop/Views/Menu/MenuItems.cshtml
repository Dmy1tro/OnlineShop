@model OnlineShop.ViewModels.MenuGenreViewModel

<a class="btn btn-lg btn-primary mb-2 menu-button" href="~/Main/BookList">Books</a>
<div class="dropdown">
    <button type="button" class="btn btn-lg btn-outline-info menu-button dropdown-toggle" data-toggle="dropdown">
        Genres
    </button>
    <div class="dropdown-menu">
        <a class="dropdown-item @(Model.CurrentGenre is null ? "active" : "")" href="~/Main/BookList">All (@Model.Genres.Sum(x => x.Value))</a>
        <div class="dropdown-divider"></div>
        @foreach (var item in Model.Genres)
        {
            <a class="dropdown-item @(Model.CurrentGenre == item.Key ? "active" : "")" href="~/Main/BookList?genre=@item.Key">@item.Key (@item.Value)</a>
        }
    </div>
</div>
