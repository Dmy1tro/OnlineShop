@model OnlineShop.Entities.User

@{
    ViewBag.Title = "User Profile";
}

<div class="container my-4">
    <div class="d-inline-flex">
        <a href="~/Main/BookList">Home <i>></i>&nbsp;</a>
        <a>Profile</a>
    </div>
    <hr />
    @if (TempData["message"] != null)
    {
        <div class="alert alert-success alert-dismissible" role="alert">
            <button class="close" data-dismiss="alert">&times;</button>
            @TempData["message"]
        </div>
    }
    @using (Html.BeginForm("UserProfile", "Account", FormMethod.Post))
    {
        @Html.HiddenFor(x => x.UserId)
        <div class="form-group">
            <label>UserName</label>
            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @required = true, @style = "width: 35%" })
        </div>
        <div class="form-group">
            <label>Email</label>
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @required = true, @style = "width: 35%" })
        </div>
        <div class="form-group">
            <label>New password (if field is empty, password will not change)</label>
            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @Value = "", @style = "width: 35%" })
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group mt-2">
            <a class="btn btn-primary" href="~/Main/BookList">Back</a>
            <input class="btn btn-success" type="submit" value="Apply" />
        </div>
    }
</div>

