@model IEnumerable<OnlineShop.Entities.OrderHeader>

@{
    ViewBag.Title = "Orders";
}

<div class="container my-4">
    <div class="d-inline-flex">
        <a href="~/Main/BookList">Home <i>></i>&nbsp;</a>
        <a>@User.Identity.Name <i>></i>&nbsp;</a>
        <a>Orders</a>
    </div>
    <hr />
    <table class="table table-responsive-md table-bordered" style="background: #fff; width: 100%;">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Address</th>
                <th>Details</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-left py-2">
                        @item.UserName
                    </td>
                    <td class="text-left py-2">
                        @item.UserEmail
                    </td>
                    <td class="text-left py-2">
                        @item.Address
                    </td>
                    <td class="text-left py-2">
                        @foreach(var detail in item.OrderDetails)
                        {
                            <p><strong>•</strong>@detail.Book.Name x @detail.Count = @detail.TotalPrice.ToString("c")</p>
                        }
                    </td>
                    <td class ="py-2" style="min-width: 180px">
                        @item.Date
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="text-center">
        <a href="~/Main/BookList" class="btn btn-primary">Back</a>
    </div>
</div>