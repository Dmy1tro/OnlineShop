@model OnlineShop.Models.OrderDetailsViewModel

@{
    ViewBag.Title = "Checkout view";
}

<div class="container mt-4">
    <div class="d-inline-flex">
        <a href="~/Main/BookList">Home <i>></i>&nbsp;</a>
        <a href="~/Cart/OpenCart">Cart <i>></i>&nbsp;</a>
        <a>Checkout Total info</a>
    </div>
    <hr />
    <div class="float-right mr-5">
        <h3 class="text-center">Your order</h3>
        <table class="table table-striped float-right" style="background: #fff;">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Amount</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Cart.TotalCart)
                {
                    <tr>
                        <td class="text-left">@item.Book.Name</td>
                        <td>@item.Amount</td>
                        <td>@item.Book.Price.ToString("c")</td>
                    </tr>
                }

                <tr>
                    <td></td>
                    <td></td>
                    <td class="font-weight-bold">Total: @Model.Cart.TotalPrice().ToString("c")</td>
                </tr>
            </tbody>
        </table>
    </div>

    <h3>Contact details</h3>
    <div class="form-group">
        <label>Payment method: <strong>Cash</strong></label>
    </div>
    <div class="form-group">
        <label>Name: <strong>@Model.Name</strong></label>
    </div>
    <div class="form-group">
        <label>Email: <strong>@Model.Email</strong></label>
    </div>
    <div class="form-group">
        <label>Country: <strong>@Model.Country</strong></label>
    </div>
    <div class="form-group">
        <label>Street: <strong>@Model.Street</strong></label>
    </div>
    @using (Html.BeginForm("CheckoutPayFinal", "Cart", FormMethod.Post))
    {
        @Html.HiddenFor(x => x.Name)
        @Html.HiddenFor(x => x.Email)
        @Html.HiddenFor(x => x.Country)
        @Html.HiddenFor(x => x.City)
        @Html.HiddenFor(x => x.Street)
        <div class="form-group">
            <a href="~/Cart/Checkout" class="btn btn-primary">Back</a>
            <input type="submit" class="btn btn-success" value="Confirm" />
        </div>
    }
</div>



