<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" />
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    <header class="custom-header d-flex justify-content-between px-2 py-1">
        <a href="#" class="navbar-brand">OnlineShop</a>

        <div class="d-flex">
            <nav class="navbar navbar-expand-lg m-auto">
                @Html.Partial("_Login")
                <div id="cartInfoToUpdate" class="pl-2">
                    @Html.Action(actionName: "CartInfo", controllerName: "Cart")
                </div>
            </nav>
        </div>
    </header>
    @RenderBody()

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script defer>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
</body>
</html>
